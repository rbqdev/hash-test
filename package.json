{
  "name": "hash-test",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test:unit": "react-app-rewired test",
    "test:unit:watch": "react-app-rewired test --watch",
    "test:unit:coverage": "react-app-rewired test --coverage --watchAll=false",
    "test:e2e": "start-server-and-test start http-get://localhost:3000 cy:open",
    "cy:open": "cypress open",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook"
  },
  "dependencies": {
    "@storybook/addon-essentials": "^6.1.20",
    "@storybook/preset-create-react-app": "^3.1.6",
    "@storybook/react": "^6.1.20",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.34",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "polished": "^4.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-loading-skeleton": "^2.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.2.1",
    "styled-media-query": "^2.1.2",
    "typescript": "^4.2.3",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^5.0.3",
    "@testing-library/user-event": "^12.8.3",
    "@types/styled-components": "^5.1.8",
    "cypress": "^6.5.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-styled-components": "^7.0.3",
    "prettier": "^2.2.1",
    "react-app-rewired": "^2.1.8",
    "start-server-and-test": "^1.12.0",
    "ts-loader": "^8.0.17"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/.jest/setup.ts"
    ],
    "modulePaths": [
      "<rootDir>/src/",
      "<rootDir>/.jest/"
    ],
    "moduleNameMapper": {
      "^@components/(.*)": "<rootDir>/src/components/$1",
      "^@configs/(.*)": "<rootDir>/src/configs/$1",
      "^@contexts/(.*)": "<rootDir>/src/contexts/$1",
      "^@hooks/(.*)": "<rootDir>/src/hooks/$1",
      "^@styles/(.*)": "<rootDir>/src/styles/$1",
      "^@utils/(.*)": "<rootDir>/src/utils/$1",
      "^@testsUtils/(.*)": "<rootDir>/src/testsUtils/$1",
      "^styled-components": "<rootDir>/node_modules/styled-components/dist/styled-components.browser.cjs.js"
    },
    "clearMocks": true,
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts(x)?",
      "!src/**/stories.tsx",
      "!src/pages/**/*.tsx",
      "!src/styles/**/*.ts"
    ]
  }
}